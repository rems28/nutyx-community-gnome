# Depends on: gtkspell3 gtk3 gtksourceview meson libgee libgit2-glib libpeas libsecret libsoup vala 

description="GNOME GUI client to view git repositories"
url="http://www.gnome.org/"
packager="fanch <fanch@nutyx.com>"
contributors=" Tnut"
run=()

name=gitg
version=3.30.1
release=1
source=(http://download.gnome.org/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr 
ninja
DESTDIR=$PKG ninja install
}
