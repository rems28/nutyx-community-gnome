# Depends on: sassc caribou evolution-data-server gjs gnome-control-center gnome-themes-standard libcroco mutter startup-notification gnome-bluetooth gstreamer-plugins-base network-manager-applet gtk-doc adwaita-icon-theme dconf gnome-backgrounds gnome-menus gnome-themes-standard telepathy-mission-control

description="provides the core user interface functions for the GNOME 3 Desktop"
url="http://www.gnome.org/"
packager="fanch <fanch@nutyx.com>"
contributors="Fanch, Tnut"
run=(adwaita-icon-theme dconf gnome-backgrounds gnome-menus telepathy-mission-control gtk-update-icon-cache)

name=gnome-shell
version=3.30.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr -Dsystemd=false
ninja
DESTDIR=$PKG ninja install
}
